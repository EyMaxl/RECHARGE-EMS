<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        app:cardCornerRadius="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertIng_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="Ingredient"
                android:textStyle="bold"
                android:textSize="14dp"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/alertIng_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:text="Are you sure you want to delet this ingredient?"
                    android:textColor="@color/loungeGray"
                    android:textSize="10dp"
                    android:gravity="center"/>

                <View
                    android:id="@+id/alertIng_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/alertIng_message"
                    android:visibility="gone"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@id/alertIng_view">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/alertIng_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Delete"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:background="@color/deleteRed"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
        



</LinearLayout>